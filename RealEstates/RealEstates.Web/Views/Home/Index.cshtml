@using RealEstates.Services.Models
@model IEnumerable<DistrictViewModel>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome Yusmen</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<table class="table table-striped table-hover table-sm">
    <tr>
        <th>District</th>
        <th>Properties Count</th>
        <th>Average Price</th>
        <th>Max Price</th>
        <th>Min Price</th>


    </tr>

    @foreach (DistrictViewModel district in this.Model.Where(x => x.PropertiesCount >= 20))
    {
        <tr>
            <td>@district.Name</td>
            <td>@district.PropertiesCount</td>
            <td>@district.AveragePrice.ToString("0.00")€</td>
            <td>@district.MaxPrice.ToString("0.00")€</td>
            <td>@district.MinPrice.ToString("0.00")€</td>


        </tr>
    }




</table>
